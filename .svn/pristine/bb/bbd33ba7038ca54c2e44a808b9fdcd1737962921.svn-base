body{font-size:14px}

.header,.footer{ position:absolute; left:0; right:0; width:100%; z-index:99}
.header_img{top:0; height:100px; background: url(../images/university_logo.png) no-repeat 0 center;}
.header{top:0;height:100px;background:url(../skin/default/header_bg.jpg) no-repeat ;
filter:"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
   -moz-background-size:100% 100%;
   background-size:100% 100% ;}
.loginWraper{ position:absolute;width:100%; left:0; top:100px; bottom:30px; right:0; z-index:1; background:#3283AC url(../images/admin-login-bg.jpg) no-repeat center;filter:"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
   -moz-background-size:100% 100%;
   background-size:100% 100% ;}
.loginBox{ position:absolute; width:617px; height:300px; background:url(../images/admin-loginform-bg.png) no-repeat; left:50%; top:40%; margin-left:-309px; margin-top:-184px; padding-top:38px;border-radius:5px ;border: 1px solid #fff;color: #fff;}
.Hui-iconfont{color: #FFF;}
.login_title{width: 100%;height: 30px;line-height: 30px;text-align: center;font-size: 20px;font-weight: 600;}
@media (max-width:617px) {
	.loginbox{ width:100%; position:static; margin-top:0; margin-left:0;}
}
.loginBox .row{margin-top:20px;}
.loginBox .row .form-label .Hui-iconfont{ font-size:24px}
.loginBox .input-text{ width:360px}
@media (max-width:617px) {
	.loginBox .input-text{ width:80%}
}
